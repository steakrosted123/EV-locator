<% layout('layout/boilerplate') %>
    
<div id="map" style="width:100%;height:500px"></div>
    <div class="container">
    <h1>All Stations</h1>
    
    <% for (let station of stations){%>
    <div class="card mb-3" >
        <div class="row">
            <div class="col-md-4">
                <%if(station.images.length) {%>
                  <img class="img-fluid" alt="" src="<%=station.images[0].url%>">
                <% }%>
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title"><%= station.name %> </h5>
    
                    <p class="card-text"><%= station.description %></p>
                    <p class="card-text">
                        <small class="text-muted"><%= station.location%></small>
                    </p>
                    <a class="btn btn-primary" href="/stations/<%=station._id%>">View <%=station.name%></a>
                </div>
            </div>
        </div>
    </div>
    <% }%>
    </div>
    <script>
      const mapToken = '<%-process.env.MAPBOX_TOKEN%>'
      const stations = {features: <%-JSON.stringify(stations)%>}
    </script>
    
    <script src="/scripts/clustermap.js"></script>
    